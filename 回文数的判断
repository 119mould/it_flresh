#include<stdio.h>
#include<string.h>
//回文 及一个数关于中心对称
//用到的方法 ，string中的 strlen 方法，返回字符的个数，再进行对称比较
int main(void){
	char a[99];
	int num,i=0,flag = 1; 
	printf("请输入数：");
	 gets(a) ;
	 num = strlen(a);
	//获得a的位数
	printf("a为%d位数",num) ;
	//进行数比较是不是相等
	for(;i<=(num/2);i++){
		if(a[i] != a[num-i-1])
		flag =0 ;
		break;
	} 
	if(flag = 1)
	printf("\n该数是回文数" );
	else
	printf("\n该数不是回文数"); 
	
	return 0;
	
} 
