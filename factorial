//use c programming language
//题目 求n!的结果，使用循环以及递归

//方法一：循环
#include<stdio.h>

int main(void){int n;
  int sum =0;	
	printf("请输入一个整数：");
	scanf("%d",&n);
	for(int i = 1; i<=n;i++){
		sum +=n;}
	printf("%d",sum);
	return 0;
}

//递归
#include<stdio.h>

int main(void){
		
	int f(int a);	//声明调用函数 
	int n;
	
	printf("请输入一个整数：");
	scanf("%d",&n);
	f(n);
	
	
	return 0;
}
int f(int a){
		int i;
		int sum =0;
	for( i = 1; i<=a;i++){
		sum +=a;}
		printf("%d",sum);
		return sum;
	}
